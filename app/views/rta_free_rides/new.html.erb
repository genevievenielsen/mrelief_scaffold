<div class= "container">

<section class="content-section">
  <div class="row">
    <div class="col-md-12">
      <h1>RTA Ride Free</h1>
      <p>RTA Ride Free provides free rides on fixed-route transit (regularly scheduled CTA, Metra and Pace buses or trains) for any Illinois resident who is enrolled in the Illinois Department on Aging Benefit Access Program. You must also have a disability or be a senior aged 65 or older.
      You can find more information about RTA Ride Free by <a href="http://www.rtachicago.com/images/stories/Ride_Free_Brochure_2013.pdf">clicking here.</a>
      Please <a href="http://www.illinois.gov/aging/BenefitsAccess/Pages/Eligibility%20and%20Frequently-Asked-Questions.aspx">click  here</a> for disability criteria.</p>
    </div>
  </div>
</section>


<section class="content-section">
<div class="row">
  <div class="col-md-8">
    <form action="/rta_free_rides" role="form" method="post">

    <!-- Form for age question -->
      <%= render "programs/age_question" %>

    <!-- Form fro disability question -->
      <%= render "programs/disability_question" %>

    <!-- Form for dependent_no question -->
      <%= render "programs/dependent_question" %>

    <!-- Form for gross_income question -->
      <div class="row">
        <div class="col-md-9">
          <label for="rta_gross_income"> What is your gross annual income?</label>
              <input type="text" id="rta_gross_income" name="rta_gross_income" placeholder="For example: 30000" class="form-field" value= "<%= @d.gross_annual_income %>" required>
        </div>
      </div>

     <!-- Form for zipcode -->
     <%= render "programs/zipcode_question" %>

     <!-- Form for location question -->
     <%= render "programs/location_question" %>

     <!-- Form for cellphone question -->
     <%= render "programs/cellphone_question" %>

     <!-- Submit button -->
     <%= render "programs/submit_button" %>

  </form>
  </div>

    <div class="col-md-3 sm-3 xs-12 pull-left">
      <div class="calculator_box">
        <%= render "programs/calculator" %>
      </div>
    </div>

  </div>
  </section>
</div>

<script>
$(document).ready(function() {

  //this is the map scroll down thing
  $(window).scroll(function() {
    if($(this).scrollTop() > 310 && $(this).width() > 750) {
      $('.calculator_box').addClass('sticky_calculator');
    } else {
      $('.calculator_box').removeClass('sticky_calculator');
    }
  });

  $(window).scroll(function() {
    if($(this).scrollTop() < 310) {
      $('.calculator_box').removeClass('sticky_calculator');
    }
  });

  $(window).scroll(function() {
    if($(this).width() < 750) {
      $('.calculator').removeClass('sticky_calculator');
    }
  });
    $(function (){
        $("[data-toggle='popover']").popover();
      });

    $('body').on('click', function (e) {
        $('[data-toggle="popover"]').each(function () {
            //the 'is' for buttons that trigger popups
            //the 'has' for icons within a button that triggers a popup
            if (!$(this).is(e.target) && $(this).has(e.target).length === 0 && $('.popover').has(e.target).length === 0) {
                $(this).popover('hide');
            }
        });
    });
});
</script>




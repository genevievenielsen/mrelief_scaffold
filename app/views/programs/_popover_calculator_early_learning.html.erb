
<a href="#" data-toggle="modal" data-target="#calculator" class="secondary-link">View Calculator</a>

<!-- All City Programs Modal -->
<div class="modal fade" id="calculator" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
          <button type="button" class="close close_modal" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">

            <div class="row">
            <div class="text-center">
            <div class="calculator-wrapper">
            <!-- calculator -->
            <div class="pull-left" style="padding-left:10px">
                <div id="js-calculator-popover" class="calculator">

                  <!-- Screen and clear key -->
                  <div class="cf top">
                    <span class="btn-calc clear">C</span>
                    <div class="screen" id="screen-popover"></div>
                  </div>

                  <!-- operators and other keys -->
                  <div class="cf keys">
                    <span class="btn-calc">7</span>
                    <span class="btn-calc">8</span>
                    <span class="btn-calc">9</span>
                    <span class="btn-calc operator">+</span>
                    <span class="btn-calc">4</span>
                    <span class="btn-calc">5</span>
                    <span class="btn-calc">6</span>
                    <span class="btn-calc operator">-</span>
                    <span class="btn-calc">1</span>
                    <span class="btn-calc">2</span>
                    <span class="btn-calc">3</span>
                    <span class="btn-calc operator">รท</span>
                    <span class="btn-calc">0</span>
                    <span class="btn-calc">.</span>
                    <span class="btn-calc eval">=</span>
                    <span class="btn-calc operator">x</span>
                  </div>

              </div>
            </div>
            </div>
            </div>
          </div>    
      </div>
    </div>
  </div>
</div>

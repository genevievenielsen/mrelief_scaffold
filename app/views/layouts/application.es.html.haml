      - if notice.present?
        .alert.alert-dismissable.alert-success
          %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
          = notice
      - if alert.present?
        .alert.alert-dismissable.alert-warning
          %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
          = alert
      = yield

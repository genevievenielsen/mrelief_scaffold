.form-group.col-sm-9
  %label{:for => "phone_number"}= t.layouts.phone_question | "What is your cell phone number?"
  %button{"data-content" => I18n.t("popover.phone_number", :default => "We will use this number to send you reminders throughout the application process."), "data-placement" => "top", "data-toggle" => "popover", :style => "border: 0px; color: #4582ec; background-color: #FAFAFA", :type => "button"}
    %i.fa.fa-info-circle
  %div
    %input#phone_number.form-control{:name => "phone_number", :placeholder => I18n.t("placeholder.example_phone", :default => "For example: 3121110011"), :type => "text"}/
:javascript
  $(function ()
    { $("[data-toggle='popover']").popover();
  });

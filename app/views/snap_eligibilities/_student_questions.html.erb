<div class="student_questions">
  <div class="row">
    <div class="col-md-9 col-sm-10 col-xs-12" id="student_status_question">
      <label for="student" id="student">Describe your current student status:</label>
      <div class="radio-button">
      <% [ 'I am not a student', 'I am currently enrolled half time or more', 'I am currently enrolled LESS than half time' ].each do |student| %>
        <label for="student_<%= student %>" class="checkbox-question">
          <%= radio_button_tag 'student', student, student_status == student, id: "student_#{student}" %>
          <%= student.humanize %>
        </label><br>
      <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-9 col-sm-10 col-xs-12" id="student_work_question">
      <label for="work" id="work"> Are you currently working an average of 20 hours a week OR are in a work study program? </label>
        <div class="radio-button">
        <% [ 'yes', 'no'].each do |work| %>
          <label for="work_<%= work %>" class="checkbox-question">
            <%= radio_button_tag 'work', work, work_status == work, id: "work_#{work}" %>
            <%= work.humanize %>
          </label><br>
        <% end %>
        </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    //student status hover mechanism
     $( "#student_status_question" ).hover(
       function() {
           $( this ).append( $( "<p class=\"hover_explanation\">Enrollment status (part time/full time) may vary by school. Students should check their status as described by their particular school.</p>" ) );
         },
       function() {
         $( this ).find( "p:last" ).remove();
       }
     );
     //student work hover mechanism
      $( "#student_work_question" ).hover(
        function() {
            $( this ).append( $( "<p class=\"hover_explanation\">If self-employed, students must be working an average of 20 hours per week and earn at least $7.25, OR approved to participate in a state or federal workstudy program for the school term and expecting to work in a state or federal workstudy program during the school year.</p>" ) );
          },
        function() {
          $( this ).find( "p:last" ).remove();
        }
      );
</script>

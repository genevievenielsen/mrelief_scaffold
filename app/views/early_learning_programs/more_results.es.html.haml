.container.marquee
  .row
    .col-md-12
      - if @user.ccap_eligible == true
        %h1= t.elp.ccap_eligible | "You Likely Qualify for CCAP"
        %p= t.elp.ccap_eligible_message | "For more information, please call Illinois Action For Children Community Referral Team at 312-823-1100."
      - else
        %h1= t.elp.ccap_ineligible | "You Likely Do Not Qualify for CCAP"
        .resources
          %h3= t.elp.ccap_resources | "Resources"
          %p= t.elp.ccap_ineligible_message | "Please call the Illinois Action Referral for Children Community Referrals Hotline number, 312-823-1100 or email them at referrals@actforchildren.org."
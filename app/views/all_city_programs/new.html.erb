
<div class="container">
<section class="content-section marquee">
  <div class="row">
    <div class="col-md-12">
      <h1>All City Programs within mRelief</h1>
      <p> Programs include Food Stamps, RTA Ride Free, All Kids, Medicare Cost Sharing, Rental Assistance, Medicaid,  Aged, Blind and Disabled (AABD), Cash Assistance and Temporary Assistance for Needy Families</p>
    </div>
  </div>
</section>

<section class="content-section">
<div class="row">
  <div class="col-sm-6 col-md-8">
  <form action="/all_city_programs" role="form" method="post">



  <% if @current_user.food_stamps != "checked" || @current_user.rta_ride_free != "checked" || @current_user.aabd != "checked" %>
    <%= render "programs/age_question" %>
  <% end %>


  <!-- Form for dependent no -->
  <% if @current_user.food_stamps != "checked" || @current_user.rta_ride_free != "checked" || @current_user.rental_assistance != "checked" || @current_user.medicaid != "checked" || @current_user.medicare_cost_sharing != "checked" || @current_user.aabd != "checked" || @current_user.tanf != "checked" %>
    <div class="row">
      <div class="col-md-9">
        <label for="dependent_no">What is the number of people living in your household including yourself?</label>
          <p type="button" data-toggle="popover" data-content="This should include the number of people who purchase and  prepare food with you." data-placement="right" style="border: 0px; color: #4582ec; ">
            <input type="text" id="dependent_no" name="dependent_no" placeholder="For example: 3" class="form-field" value="<%= @current_user.try(:household_size) %>"  required>
          </p>
      </div>
    </div>
  <% end %>

  <% if @current_user.all_kids != "checked" || @current_user.tanf != "checked" %>
    <div class="row">
      <div class="col-md-9">
        <label for="children">How many children 18 and under are you caring for?</label>
            <input type="text" id="children" name="children" placeholder="For example: 3" class="form-field"  value="<%= @d.number_of_children %>" required>
      </div>
    </div>
  <% end %>

  <% if @current_user.medicare_cost_sharing != "checked" %>
    <div class="row">
      <div class="col-md-9">
       <label for="medicare_household_size">How many people in your household receive Medicare?</label>
         <input type="text" id="medicare_household_size" name="medicare_household_size" placeholder="For example: 2" class="   form-field"  required>
       </div>
     </div>
   <% end %>

  <!-- Form for gross monthly income -->
  <% if @current_user.food_stamps != "checked" || @current_user.all_kids != "checked"  || @current_user.medicaid != "checked" || @current_user.medicare_cost_sharing != "checked" %>
      <div class="row">
        <div class="col-md-9">
          <label for="monthly_gross_income"> What is your household's gross monthly income?</label>
            <p type="button" data-toggle="popover" data-content="This includes the monthly income of all people living in your household including yourself. This includes income from all sources, such as Social Security, child support, and unemployment insurance before any deductions." data-placement="right" style="border: 0px; color: #4582ec; ">
             <input type="text" id="monthly_gross_income" name="monthly_gross_income" placeholder="For example: 1000"class="    form-field" value="<%= @d.monthly_gross_income %>" required>
             </p>
        </div>
      </div>
   <% end %>


  <% if @current_user.aabd != "checked" || @current_user.tanf != "checked" %>
    <div class="row">
      <div class="col-md-9">
        <label for="net_income">
         How much do you anticipate to earn in net income in the next 30 days? (After taxes have been taken out)
        </label>
           <p type="button" data-toggle="popover" data-content="This should include income you earn from your work, self  employment and rental income (contributions from people who live with you.)" data-placement="right" style="border: 0px; color: #4582ec; ">
            <input type="text" id="net_income" name="net_income" placeholder="For example: 1000"class="form-field" value="<%= @d.thirty_day_net_income %>" required>
           </p>
      </div>
    </div>
  <% end %>


  <% if @current_user.aabd != "checked" %>
    <div class="row">
      <div class="col-md-9">
        <label for="monthly_benefits">
         What is your monthly income expected from government benefits or other assistance?
        </label>
            <p type="button" data-toggle="popover" data-content="This includes social security (SSI), veterans benefits, railroad assistance etc." data-placement="right" style="border: 0px; color: #4582ec; ">
              <input type="text" id="monthly_benefits" name="monthly_benefits" placeholder="For example: 1000"class="form-field" value="<%= @d.monthly_benefits %>" required>
            </p>
      </div>
    </div>
  <% end %>

  <% if @current_user.tanf != "checked" %>
    <div class="row">
      <div class="col-md-9">
        <label for="anticipate_income" id="anticipate_income">Do you or your child anticipate getting any other source of income outside of your job, child support or SSI?
        <!-- <button type="button" data-toggle="popover" data-content="This includes unemployment insurance, pensions,  workers compensation and any other form of income." data-placement="right" style="border: 0px; color: #4582ec;   "><i class="fa fa-info-circle"></i></button> -->
        </label>
        <div class="radio-button">
          <% [ 'yes', 'no'].each do |anticipate_income| %>
            <%= radio_button_tag 'anticipate_income', anticipate_income, @d.anticipate_other_income == anticipate_income %>
            <%= anticipate_income.humanize %>
            <br>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Form for expect_child_support -->
    <div class="row">
      <div class="col-md-9">
        <label for="expect_child_support">
          How much do you expect to receive in child support in the next 30 days?
        </label>
           <input type="text" id="expect_child_support" name="expect_child_support" placeholder="For example: 500" class="  form-field" value="<%= @d.child_support %>" required>
      </div>
    </div>

      <!-- Form for expect_ssi -->
      <div class="row">
        <div class="col-md-9">
          <label for="expect_ssi">
            How much do you expect to receive in SSI in the next 30 days?
          </label>
           <input type="text" id="expect_ssi" name="expect_ssi" placeholder="For example: 500" class="form-field" value="<%= @d.ssi %>" required>
        </div>
      </div>
  <% end %>

  <!-- if the user is already receiving rental assistance, do not show these questions -->
   <% if @current_user.rental_assistance != "checked" %>
    <div class="row">
      <div class="col-md-9">
        <label for="ninety_day_gross_income">
          What is your income over the past 90 days? </label>
          <p type="button" data-toggle="popover" data-content="Includes cash receipts from all sources including money wages and salaries before any deductions, unemployment compensation, public assistance, alimony, child support, lottery/gambling winnings, dividends and all other income." data-placement="right" style="border: 0px; color: #4582ec; ">
            <input type="text" id="ninety_day_gross_income" name="ninety_day_gross_income" placeholder="For example: 4000"    class="form-field" value="<%= @d.ninety_day_gross_income %>" required>
          </p>
      </div>
    </div>
  <% end %>

  <!-- Form for gross annual income -->
  <% if @current_user.rta_ride_free != "checked" %>
    <div class="row">
      <div class="col-md-9">
       <label for="annual_gross_income">What is your gross annual income? </label>
          <p type="button" data-toggle="popover" data-content="Your total income before tax deductions, including your  spouse's income if married and living together on December 31 of last year, and that of a qualified additional resident (if applicable)." data-placement="right" style="border: 0px; color: #4582ec; ">
            <input type="text" id="annual_gross_income" name="annual_gross_income" placeholder="For example: 30000" class=" form-field" value="<%= @d.annual_gross_income %>" required>
          </p>
      </div>
    </div>
  <% end %>

  <% if @current_user.medicare_cost_sharing != "checked" || @current_user.aabd != "checked"%>
    <div class="row">
      <div class="col-md-9">
      <label for="assets">Please estimate the value of your assets. (Exclude the value of your home and car.)</label>
        <p type="button" data-toggle="popover" data-content="Personal property is anything owned by a person that is not land or permanently affixed to land. This includes such items as: money in checking and savings accounts;stocks, bonds, savings certificates, and other securities;farm and small business equipment, unless used for income for self-support, estate bequests; and miscellaneous resources that are not real property." data-placement="right" style="border: 0px; color: #4582ec; ">
          <input type="text" id="assets" name="assets" placeholder="For example: 5000" class="form-field" value="<%= @d.assets %>" required>
          </p>
      </div>
    </div>
  <% end %>

  <% if @current_user.food_stamps != "checked" %>
    <div class="row">
      <div class="col-md-9">
        <label for="education" id="education">Are you enrolled in college/institution of higher education? </label>
        <div class="radio-button">
          <% [ 'yes', 'no'].each do |education| %>
            <%= radio_button_tag 'education', education, @d.enrolled_in_education == education %>
            <%= education.humanize %>
             <br>
          <% end %>
        </div>
      </div>
     </div>
  <% end %>

  <div class="place_for_student_questions">

  </div>

  <% if @current_user.food_stamps != "checked" || @current_user.medicaid != "checked" || @current_user.aabd != "checked" || @current_user.tanf != "checked" %>
    <!-- Form for citizen question -->
      <%= render "programs/citizen_question" %>
  <% end %>

  <% if @current_user.all_kids != "checked" || @current_user.tanf != "checked" %>
    <div class="row">
      <div class="col-md-9">
        <label>Select all that apply to you:</label>
        <div class="radio-button">
          <input type="checkbox" name="pregnant" value="pregnant"> I am pregnant<br>
          <input type="checkbox" name="first_child" value="first_child"> I am pregnant with my first child <br>
          <input type="checkbox" name="teen_parent" value="teen_parent"> I am a teen parent <br>
          <input type="checkbox" name="highschool" value="no_highschool"> I care for a child that is 18 and not enrolled full time in high school <br>
          <input type="checkbox" name="care_for_child" value="care_for_child"> I care for a child that is under 19 years of age <br>
          <input type="checkbox" name="no_children" value="no_children"> I care for no children <br>
        </div>
      </div>
    </div>
  <% end %>

  <% if @current_user.tanf != "checked" %>
    <div class="row">
      <div class="col-md-9">
        <label for="relationship" id="relationship">Describe your biological relationship to the child you are caring for:</label>
        <div class="radio-button">
          <% [ 'parent', 'adult relative'].each do |relationship| %>
            <%= radio_button_tag 'relationship', relationship, @d.relationship_to_child == relationship %>
            <%= relationship.humanize %>
            <br>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-9">
      <label for="tanif_sixty_months" id="tanif_sixty_months">As a parent have you been receiving TANF for 60 months or more?</label>
        <div class="radio-button">
          <% [ 'yes', 'no', 'I am a caretaker relative, this does not apply to me.'].each do |tanif_sixty_months| %>
            <%= radio_button_tag 'tanif_sixty_months', tanif_sixty_months, @d.tanif_sixty_months == tanif_sixty_months %>
            <%= tanif_sixty_months.humanize %>
             <br>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <% if @current_user.rental_assistance != "checked" %>
  <!-- if the user is already receiving rental assistance, do not show these questions -->

    <div class="row">
      <div class="col-md-9">
      <label for="lease" id="lease" >Is your name currently on the lease of the apartment that you are renting?</label>
      <div class="radio-button">
        <% [ 'yes', 'no' ].each do |lease| %>
          <%= radio_button_tag 'lease', lease, @d.name_on_lease == lease %>
          <%= lease.humanize %>
        <br>
        <% end %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-9">
      <label for="next_rent" id="next_rent">Can you document that you can afford next month’s rent? </label>
      <div class="radio-button">
        <% [ 'yes', 'no' ].each do |next_rent| %>
          <%= radio_button_tag 'next_rent', next_rent, @d.next_month_rent == next_rent %>
          <%= next_rent.humanize %>
          <br>
        <% end %>
      </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-9">
        <label>If you are unable to pay your rent at this time, what circumstance explains why you are unable to pay rent? </label>
        <div class="radio-button">
          <div class="relative" id="rental_status">
            <%= radio_button_tag 'rental_status', 'medical circumstance' %> Someone experiencing a medical circumstance

             <!-- <button type="button" data-toggle="popover" data-content="An emergency procedure (for example: surgery, related to complicated birth or other conditions) that prevents you from returning to work immediately and then leads to temporarily losing income. This can also apply to your spouse, child, committed partner whose name is on the lease or grandparent who lives with you." data-placement="right" style="border: 0px; color: #4582ec; "><i class="fa fa-info-circle"></i></button> -->

            <br><%= radio_button_tag 'rental_status', 'a victim of natural disaster or fire' %> A victim of natural disaster or fire

            <!--  <button type="button" data-toggle="popover" data-content="A natural disaster includes instances such as a tornado or fire that prevents you from returning to work immediately and then leads to temporarily losing income. This can also apply to floods for people who are renting a basement apartment who can not afford to replace those items and are seeking relocation." data-placement="right" style="border: 0px; color: #4582ec; "><i class="fa fa-info-circle"></i></button> -->

            <br><%= radio_button_tag 'rental_status', 'a recipient of an eviction notice' %> A recipient of an eviction notice

            <!--  <button type="button" data-toggle="popover" data-content="This must be a notice that is notarized and brought with you if you qualify." data-placement="right" style="border: 0px; color: #4582ec; "><i class="fa fa-info-circle"></i></button> -->

            <br><%= radio_button_tag 'rental_status', 'have experienced a temporary loss of income' %> Have experienced a temporary loss of income

            <!--  <button type="button" data-toggle="popover" data-content="This involves losing income due to an unforeseen event (layoff, termination,or other emergencies etc.) The month in between when you lose your job and qualify for unemployment would be admissible." data-placement="right" style="border: 0px; color: #4582ec; "><i class="fa fa-info-circle"></i></button> -->

            <br><%= radio_button_tag 'rental_status', 'a victim of domestic violence' %> A victim of domestic violence

            <!--  <button type="button" data-toggle="popover" data-content="This involves losing income due to violence from your intimate partner. " data-placement="right" style="border: 0px; color: #4582ec; "><i class="fa fa-info-circle"></i></button> -->

            <br><%= radio_button_tag 'rental_status', 'none of the above' %> None of the above
          </div>
        </div>
      </div>
    </div>

  <% end %> <!-- this ends the rental assistance questions section -->

  <% if  @current_user.all_kids != "checked"  %>
    <div class="row">
      <div class="col-md-9">
        <label for="status" id="status" class="pull-left">If you have a child, check the box below that describes your child's health insurance status:</label>

        <div class="radio-button">
          <input type="checkbox" name="status" value="uninsured">  been uninsured for 12 months<br>
          <input type="checkbox" name="status" value="job_ended"> lost insurance because a JOB ended<br>
          <input type="checkbox" name="status" value="cobra"> lost insurance because the insurance was COBRA<br>
          <input type="checkbox" name="status" value="none"> none of the above<br>
        </div>
      </div>
    </div>
  <% end %>

  <% if @current_user.food_stamps != "checked" || @current_user.rta_ride_free != "checked" || @current_user.aabd != "checked" %>
    <!-- Form for disability question -->
    <%= render "programs/disability_question" %>
  <% end %>

  <!-- Form for zipcode -->
    <%= render "programs/zipcode_question" %>

  <!-- Form for location question -->
    <%= render "programs/location_question" %>

  <!-- Form for cellphone question -->
    <%= render "programs/cellphone_question" %>

  <!-- Submit button -->
    <%= render "programs/submit_button" %>

  </form>
  </div>

    <div class="col-md-3 sm-3 xs-12 pull-left">
      <div class="calculator_box">
        <%= render "programs/calculator" %>
      </div>
    </div>

  </div>
  </section>
</div>

<script>
$(document).ready(function() {

  //education hover mechanism
     $( "#education_question" ).hover(
       function() {
           $( this ).append( $( "<p class=\"hover_explanation\">Eligibile schools include: a business, technical, trade, or vocational school that normally requires a high school diploma or the equivalent for enrollment in the course of study; or regular courses, including internet, mail, self-study, or correspondence courses, at an accredited college or university that offers degree programs.</p>" ) );
         },
       function() {
         $( this ).find( "p:last" ).remove();
       }
     );
    //student JavaScript
    $("input:radio[name=education]").click(function() {
    var value = $(this).val();
      if (value == "yes") {
        $('.place_for_student_questions').empty().append("<%= escape_javascript(render "snap_eligibilities/student_questions", :work_status => @d.work_status, :student_status => @d.student_status ) %>");
      }
      if (value == "no") {
        $('.student_questions').remove();
      }
    });
    if($('input:radio[name=education][value="yes"]').prop('checked')){
        $('.place_for_student_questions').append("<%= escape_javascript(render "snap_eligibilities/student_questions",   :work_status => @d.work_status, :student_status => @d.student_status ) %>");
    }
});
</script>

